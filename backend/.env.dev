# Development Environment Configuration
APP_NAME="Medicinal Plant Detection API"
APP_VERSION="1.0.0"
DEBUG=True
API_V1_PREFIX="/api/v1"

# Server
HOST=0.0.0.0
PORT=8000

# Database - SQLite for Development
DATABASE_URL=sqlite:///./medicinal_plants.db

# Security - Development Only
SECRET_KEY=dev-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS - Use JSON array format for pydantic-settings
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# ML Models
MODEL_DIR=./ml_models
MOBILENET_MODEL_PATH=./ml_models/mobilenetv2_best.onnx
VIT_MODEL_PATH=./ml_models/vit_best.onnx
CLASS_NAMES_PATH=./ml_models/class_names.json
ENSEMBLE_WEIGHTS_PATH=./ml_models/ensemble_weights.json

# Google Gemini (Optional - leave empty for now)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-pro-vision

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
