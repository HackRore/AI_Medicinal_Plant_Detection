# Production Environment Configuration
# Copy this to .env and update with your values

# Application
APP_NAME="Medicinal Plant Detection API"
APP_VERSION="1.0.0"
DEBUG=False
API_V1_PREFIX="/api/v1"

# Server
HOST=0.0.0.0
PORT=8000

# Database - PostgreSQL for Production
DATABASE_URL=postgresql://medicinal_user:your_secure_password@localhost:5432/medicinal_plants_db

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS - Update with your domain
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# AWS S3 (Optional - for production file storage)
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=medicinal-plant-images

# ML Models
MODEL_DIR=./ml_models
MOBILENET_MODEL_PATH=./ml_models/mobilenetv2_best.onnx
VIT_MODEL_PATH=./ml_models/vit_best.onnx
CLASS_NAMES_PATH=./ml_models/class_names.json
ENSEMBLE_WEIGHTS_PATH=./ml_models/ensemble_weights.json

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key-get-from-google-ai-studio
GEMINI_MODEL=gemini-pro-vision

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking
